<?xml version="1.0" encoding="UTF-8"?>
        
<!--
Default ehCache config for uk.ac.warwick.util.cache
-->    
<ehcache xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:noNamespaceSchemaLocation="ehcache.xsd"
             updateCheck="false" monitoring="autodetect" name="utilsCache">

    <defaultCache
            maxElementsInMemory="10000"
            eternal="false"
            timeToIdleSeconds="10000"
            timeToLiveSeconds="100000"
            overflowToDisk="true"
            diskSpoolBufferSizeMB="30"
            maxElementsOnDisk="10000000"
            diskPersistent="false"
            diskExpiryThreadIntervalSeconds="120"
            memoryStoreEvictionPolicy="LRU"
            />

    <cache name="DepartmentWebsiteCache"
           maxElementsInMemory="2000"
           maxElementsOnDisk="2000"
           eternal="true"
           overflowToDisk="true"
           diskPersistent="true"
           diskSpoolBufferSizeMB="20"
           memoryStoreEvictionPolicy="LFU"
            />

    <cache name="DepartmentNameCache"
           maxElementsInMemory="2000"
           maxElementsOnDisk="2000"
           eternal="true"
           overflowToDisk="true"
           diskPersistent="true"
           diskSpoolBufferSizeMB="20"
           memoryStoreEvictionPolicy="LFU"
            />

    <cache name="TwitterTimelineCache"
           maxElementsInMemory="100"
           maxElementsOnDisk="2000"
           eternal="true"
           overflowToDisk="true"
           diskPersistent="true"
           diskSpoolBufferSizeMB="20"
           memoryStoreEvictionPolicy="LFU"
            />

    <cache name="OEmbedCache"
           maxElementsInMemory="100"
           maxElementsOnDisk="2000"
           eternal="true"
           overflowToDisk="true"
           diskPersistent="true"
           diskSpoolBufferSizeMB="20"
           memoryStoreEvictionPolicy="LFU"
            />
            
    <!-- 
    Diskstore dir
    -->
    <diskStore path="${ehcache.disk.store.dir}/warwick"/>

</ehcache>
